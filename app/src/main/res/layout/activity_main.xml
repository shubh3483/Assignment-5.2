<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" >

    <TextView
        android:id="@+id/helloToastTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#616FBF"
        android:text="Hello Toast"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:padding="10dp"
        android:textSize="30sp"/>

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/helloToastTextView">
        <Button
            android:id="@+id/toast_button"
            android:text="@string/toast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="10dp"/>

        <Button
            android:id="@+id/zero_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/zero"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="50dp"
            android:layout_below="@+id/toast_button"/>

        <Button
            android:id="@+id/count_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/count"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="50dp"
            android:layout_below="@+id/zero_button"/>

        <TextView
            android:id="@+id/countTextView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignBottom="@+id/count_button"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="0dp"
            android:textSize="160dp"
            android:layout_marginRight="15dp"
            android:textAlignment="center"
            android:textColor="#3F51B5"
            android:background="#FFC107"
            android:layout_toRightOf="@+id/toast_button"
            android:text="0" />


    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>


